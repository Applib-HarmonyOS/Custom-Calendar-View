<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">

    <include
        ohos:height="match_content"
        ohos:layout="$layout:custom_calendar_title_layout"
        ohos:width="match_parent"
        ohos:id="$+id:titleLayout"/>

    <include
        ohos:height="match_content"
        ohos:layout="$layout:custom_calendar_weeks_layout"
        ohos:width="match_parent"
        ohos:id="$+id:weekLayout"/>

    <include
        ohos:height="match_content"
        ohos:layout="$layout:custom_calendar_days"
        ohos:width="match_parent"
        ohos:id="$+id:daysContainer"/>

</DirectionalLayout>