<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:width="match_parent"
    ohos:height="match_content"
    ohos:orientation="horizontal"
    ohos:alignment="center"
    ohos:bottom_padding="$float:weekTitlePaddingBottom"
    ohos:top_padding="$float:weekTitlePaddingTop"
    ohos:total_weight="7">

    <Text
        ohos:text_size="14fp"
        ohos:text_alignment="center"
        ohos:id="$+id:dayOfWeek1"
        ohos:weight="1"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="SUN"
        />
    <Text
        ohos:text_size="14fp"
        ohos:text_alignment="center"
        ohos:id="$+id:dayOfWeek2"
        ohos:weight="1"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="MON"
        />
    <Text
        ohos:text_size="14fp"
        ohos:text_alignment="center"
        ohos:id="$+id:dayOfWeek3"
        ohos:weight="1"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="TUE"
    />
    <Text
        ohos:text_size="14fp"
        ohos:text_alignment="center"
        ohos:id="$+id:dayOfWeek4"
        ohos:weight="1"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="WED"
        />
    <Text
        ohos:text_size="14fp"
        ohos:text_alignment="center"
        ohos:id="$+id:dayOfWeek5"
        ohos:weight="1"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="THU"
        />
    <Text
        ohos:text_size="14fp"
        ohos:text_alignment="center"
        ohos:id="$+id:dayOfWeek6"
        ohos:weight="1"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="FRI"
        />
    <Text
        ohos:text_size="14fp"
        ohos:text_alignment="center"
        ohos:id="$+id:dayOfWeek7"
        ohos:weight="1"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:text="SAT"
        />
</DirectionalLayout>